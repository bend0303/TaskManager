<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="il.co.shenkar.todoproject"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service android:name="il.co.shenkar.todoproject.Ex6RandomTaskService" >
        </service>

        <activity
            android:name="il.co.shenkar.todoproject.TaskViewImageActivity"
            android:label="@string/title_activity_task_view_image"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="il.co.shenkar.todoproject.TaskAddActivity"
            android:label="@string/title_activity_task_add" >
        </activity>

        <receiver android:name="il.co.shenkar.todoproject.ToDoBroadcastReciever" >
            <intent-filter>
                <action android:name="android.intent.action.TASKS" />
            </intent-filter>
        </receiver>

        <activity
            android:name="il.co.shenkar.todoproject.TaskEditActivity"
            android:label="@string/title_activity_task_edit" >
        </activity>
        <activity
            android:name="il.co.shenkar.todoproject.TaskGeoSetActivity"
            android:label="@string/title_activity_task_geo_set" >
        </activity>
    </application>

</manifest>